<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.songjiale.cms.dao.UserDao">
	<select id="select" resultType="User">
	   select * from cms_user
	</select>
	
	<select id="selectByid" resultMap="User">
	 select * from cms_user where id=#{id}
	</select>
	
	<insert id="insert">
	  insert into cms_user(username,password) values(#{user.username},#{user.password})
	</insert>
	
	<update id="update">
	 update cms_user set username=#{user.username},password=#{user.passwprd} where id= #{user.id}
	</update>
	
	<delete id="deleteByid">
	  delete from cms_user where id=#{id}
	</delete>
	
	<delete id="deleteByids">
	  delete from cms_user where id in (${id})
	</delete>


</mapper>
















































